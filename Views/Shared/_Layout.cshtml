<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - efestiamvc</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/efestiamvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />

</head>
<body>
    <header class="main-header">
        <div class="container header-content">
            <div class="logo">
                @* O caminho da imagem também foi ajustado *@
                <a href="#hero"><img src="~/images/logoefestia.png" alt="Logo EfestIA" width="35" height="25"> EfestIA</a>
            </div>
            <nav class="main-nav">
                <ul>
                <li><a asp-controller="Home" asp-action="Index" asp-fragment="sobre">Sobre</a></li>
                <li><a asp-controller="Home" asp-action="Index" asp-fragment="quemsomos">Quem Somos</a></li>
                <li><a asp-controller="Home" asp-action="Index" asp-fragment="servicos">Serviços</a></li>
                <li><a asp-controller="Home" asp-action="Contratar">Contratar</a></li>
                <li><a asp-controller="Home" asp-action="Login">Login</a></li>
                </ul>
                </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer">
        <div class="container">
            <div class="social-links">
                <a href="https://discord.gg/hUy7adxt4D" aria-label="Junte-se ao nosso Discord" target="_blank" rel="noopener noreferrer">
